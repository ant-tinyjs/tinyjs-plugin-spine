{
  "extends": "standard",
  "root": true,
  "env": {
    "es6": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "globals": {
    "Tiny": true,
    "window": true,
    "Image": true
  },
  "rules": {
    "semi": ["error", "always"],
    "spaced-comment": 0,
    "space-before-function-paren": 0,
    "comma-dangle": [1, "always-multiline"],
    "sort-imports": 0
  }
}
